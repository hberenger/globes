<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Detail.Photo.Subtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">#a0a0a0</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SortLabels" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">12sp</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">11dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">11dp</item>
    </style>

    <style name="SortLabelButtons" parent="SortLabels">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/sort_button_background</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="ArchitectsFooterButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>

    </style>

    <style name="ArchitectInfo">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
